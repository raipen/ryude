{
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "types/**/*.test-d.ts",
    ]
}